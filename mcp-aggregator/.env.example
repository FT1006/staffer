# MCP Aggregator Environment Configuration
# Copy this file to .env and set appropriate values for your environment

# MCP Server Paths - Required for STDIO protocol communication
# Set these to the absolute paths of your MCP servers
EXCEL_MCP_PATH=/Users/username/project/staffer/excel-mcp-server
ANALYTICS_MCP_PATH=/Users/username/project/staffer/quick-data-mcp-main/quick-data-mcp

# Feature Toggles
# Enable/disable individual MCP servers
EXCEL_ENABLED=true
ANALYTICS_ENABLED=true

# Tool Discovery Configuration
MAX_TOOLS_PER_SERVER=25

# Production Settings Example:
# EXCEL_MCP_PATH=/opt/mcp-servers/excel-mcp-server
# ANALYTICS_MCP_PATH=/opt/mcp-servers/analytics-mcp-server

# Note: No host/port configuration needed - MCP uses STDIO protocol